{
  "name": "tipjar",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/web"
  ],
  "scripts": {
    "dev-web": "vite --host",
    "dev-api": "vercel dev --listen 8787",
    "dev": "concurrently -k \"npm:dev-web\" \"npm:dev-api\"",
    "build-web": "vite build",
    "build": "npm run build-web",
    "lint": "eslint \"apps/web/src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "vercel": "^33.2.0"
  },
  "dependencies": {
    "busboy": "^1.6.0",
    "@vercel/node": "^3.2.3",
    "zod": "^3.23.8"
  }
}
